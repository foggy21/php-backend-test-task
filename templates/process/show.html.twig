{% extends 'base.html.twig' %}

{% block title %}Process{% endblock %}

{% block body %}
    <h1>Process</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ process.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ process.name }}</td>
            </tr>
            <tr>
                <th>Required_memory</th>
                <td>{{ process.requiredMemory }}</td>
            </tr>
            <tr>
                <th>Required_processors</th>
                <td>{{ process.requiredProcessors }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_process_index') }}">back to list</a>

    <a href="{{ path('app_process_edit', {'id': process.id}) }}">edit</a>

    {{ include('process/_delete_form.html.twig') }}
{% endblock %}
