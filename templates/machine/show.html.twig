{% extends 'base.html.twig' %}

{% block title %}Машина {{machine.name}} | Machine {{machine.name}}{% endblock %}

{% block body %}
    <h1>Данные машины {{machine.name}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ machine.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ machine.name }}</td>
            </tr>
            <tr>
                <th>Memory</th>
                <td>{{ machine.memory }}</td>
            </tr>
            <tr>
                <th>Processors</th>
                <td>{{ machine.processors }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_machine_index') }}">back to list</a>

    <a href="{{ path('app_machine_edit', {'id': machine.id}) }}">edit</a>

    {{ include('machine/_delete_form.html.twig') }}
{% endblock %}
