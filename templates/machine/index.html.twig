{% extends 'base.html.twig' %}

{% block title %}Контроллер машин | Machine's Controller{% endblock %}

{% block body %}
    <h1>Контроллер машин</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Memory</th>
                <th>Processors</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for machine in machines %}
            <tr>
                <td>{{ machine.id }}</td>
                <td>{{ machine.name }}</td>
                <td>{{ machine.memory }}</td>
                <td>{{ machine.processors }}</td>
                <td>
                    <a href="{{ path('app_machine_show', {'id': machine.id}) }}">show</a>
                    <a href="{{ path('app_machine_edit', {'id': machine.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_machine_new') }}">Create new</a>
{% endblock %}
